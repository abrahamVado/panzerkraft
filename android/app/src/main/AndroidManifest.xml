<!-- //1.- Manifest principal que declara permisos, activity y metadata de la app Flutter. -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ubberapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- //2.- Habilita el callback moderno de regreso para evitar advertencias en Android 13+. -->
    <!-- //3.- La etiqueta application agrupa configuraciones globales para la app Flutter. -->
    <application
        android:label="Red TOSUR"
        <!-- //4.- Vincula la clase generada por Flutter que inicializa la aplicación. -->
        android:name="${applicationName}"
        <!-- //5.- Asigna los íconos principales utilizados por Android. -->
        android:icon="@drawable/ic_launcher"
        android:roundIcon="@drawable/ic_launcher_round"
        <!-- //6.- Permite tráfico sin cifrar cuando es necesario. -->
        android:usesCleartextTraffic="true"
        <!-- //7.- Activa el nuevo callback de botón atrás disponible desde Android 13. -->
        android:enableOnBackInvokedCallback="true">
        <!-- //8.- MainActivity hospeda la vista Flutter y configura los filtros de intent. -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data android:name="com.google.android.geo.API_KEY" android:value="${MAPS_API_KEY}" />
        <meta-data android:name="flutterEmbedding" android:value="2" />
    </application>
</manifest>
