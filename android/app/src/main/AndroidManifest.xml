<!-- android/app/src/main/AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ubberapp">

    <!-- Permisos mínimos -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Opcionales según caso de uso -->
    <!-- Requerido si harás tracking en background (Android 10+). Pide consentimiento explícito. -->
    <!-- <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" /> -->
    <!-- Requeridos si usarás un Foreground Service para ubicación continua. -->
    <!-- <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> -->
    <!-- <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" /> -->
    <!-- Notificaciones (Android 13+) si mostrarás notificación del service -->
    <!-- <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> -->

    <!-- No obligues GPS; deja la app instalable sin él -->
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />

    <application
        android:label="Red TOSUR"
        android:name="${applicationName}"
        <!-- //1.- Delegamos el icono del launcher al vector app_icon.xml para evitar manejar mipmap manualmente. -->
        android:icon="@drawable/app_icon"
        <!-- //2.- Reutilizamos el mismo recurso vectorial para el ícono redondo asegurando consistencia. -->
        android:roundIcon="@drawable/app_icon"
        android:usesCleartextTraffic="true"
        android:enableOnBackInvokedCallback="true"
        android:supportsRtl="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Google Maps API Key: define MAPS_API_KEY en gradle.properties -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
</manifest>
